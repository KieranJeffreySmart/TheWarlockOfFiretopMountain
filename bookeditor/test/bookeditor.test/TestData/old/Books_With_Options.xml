    <book>
        <title>Goto Command</title>
        <page >
            <type>Game</type>
            <index>1</index>
            <story>
                <caret type="text">Page 1</caret>
            </story>
            <option key="g" command="GOTO_GAME_PAGE" page="3">
                <arg><key>page</key><value>3</value></arg>
                <label>Go to Page 3</label>
                </option>
        </page>
        <page >
            <type>Game</type>
            <index>2</index>
            <story>
                <caret type="text">Page 2</caret>
            </story>
            <option key="g" command="GOTO_GAME_PAGE" page="1">
                <arg><key>page</key><value>1</value></arg>
                <label>Go to Page 1</label>
            </option>
            <option key="g" command="GOTO_GAME_PAGE" page="3">
                <arg><key>page</key><value>3</value></arg>
                <label>Go to Page 3</label>
            </option>
        </page>
        <page>
            <type>Game</type>
            <index>3</index>
            <story>
                <caret type="text">Page 3</caret>
            </story>
            <option key="g" command="GOTO_GAME_PAGE" page="2">
