	<book>
		<title>Attack Single Monster</title>
		<page>
			<type>Game</type>
			<index>1</index>
			<story>
				<block type="text">Attack a single monster</block>
			</story>
			<monster>
				<name>OGRE</name>
				<skill>8</skill>
				<stamina>10</stamina>
			</monster>
			<option key="b" command="FIGHT_MONSTERS">
				<label>Battle</label>
				<win>
					<story>
						<block type="text">You have prevailed</block>
					</story>
					<option key="c" command="GOTO_GAME_PAGE">
						<arg>
							<key>page</key>
							<value>2</value>
						</arg>
						<label>Continue</label>
					</option>
				</win>
				<escape>
					<story>
						<block type="text">You have escaped down the passage</block>
					</story>
					<option key="c" command="GOTO_GAME_PAGE">
						<arg>
							<key>page</key>
							<value>4</value>
						</arg>
						<label>Continue</label>
					</option>
				</escape>
				<defeat>
					<story>
						<block type="text">
                            You were defeated
                        </block>
					</story>
					<option key="c" command="GOTO_GAME_PAGE">
						<arg>
							<key>page</key>
							<value>3</value>
						</arg>
						<label>Continue</label>
					</option>
				</defeat>
			</option>
		</page>
		<page>
			<type>Game</type>
			<index>2</index>
			<story>
				<block type="text">Win!</block>
			</story>
		</page>
		<page>
			<type>Game</type>
			<index>3</index>
			<story>
				<block type="text">Defeat!</block>
			</story>
		</page>
		<page>
			<type>Game</type>
			<index>4</index>
			<story>
				<block type="text">Escape!</block>
			</story>
		</page>
	</book>
	<book>
		<title>Stats test</title>
		<page>
			<type>Game</type>
			<index>1</index>
			<story>
				<block type="text">Try to escape sleeping ogre</block>
			</story>
			<option key="l" command="TEST_STAT">
				<arg>
					<key>stat</key>
					<value>Luck</value>
				</arg>
				<label>Luck test</label>
				<outcome>
					<type>PASS</type>
					<story>
						<block type="text">
you escape without attracting
the Ogre's attention
                        </block>
					</story>
					<option key="c" command="GOTO_GAME_PAGE">
						<arg>
							<key>page</key>
							<value>1</value>
						</arg>
						<label>Continue</label>
					</option>
				</outcome>
				<outcome>
					<type>FAIL</type>
					<story>
						<block type="text">
you curse as you kick a small stone which goes
skidding across the cavern floor. You draw your
sword in case the Ogre has heard it
                        </block>
					</story>
					<option key="c" command="GOTO_GAME_PAGE">
						<arg>
							<key>page</key>
							<value>2</value>
						</arg>
						<label>Continue</label>
					</option>
				</outcome>
			</option>
		</page>
		<page>
			<type>Game</type>
			<index>2</index>
			<story>
				<block type="text">Passed!</block>
			</story>
		</page>
		<page>
			<type>Game</type>
			<index>3</index>
			<story>
				<block type="text">Passed!</block>
			</story>
		</page>
