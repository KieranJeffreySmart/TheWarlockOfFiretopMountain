            <story>
                <caret type="text">Page 1</caret>
            </story>
            <option key="c" command="NEXT_PAGE"><label>Continue</label></option>
        </page>
        <page >
            <type>Game</type>
            <index>2</index>
            <story>
                <caret type="text">Page 2</caret>
            </story>
